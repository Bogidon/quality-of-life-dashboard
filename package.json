{
  "name": "Durham-Neighborhood-Compass",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "build-data": "./build/datagen.sh",
    "build-site": "npm run build-data && npm run build",
    "export-translations": "node ./build/export_translations.js",
    "i18n:report": "vue-cli-service i18n:report --src './src/**/*.?(js|vue)' --locales './src/locales/**/*.json'",
    "import-translations": "node ./build/import_translations.js"
  },
  "dependencies": {
    "@mapbox/mapbox-gl-geocoder": "^4.4.1",
    "chartist": "^0.11.3",
    "chartist-plugin-axistitle": "0.0.4",
    "chartist-plugin-tooltips": "0.0.17",
    "core-js": "^2.6.5",
    "csv-stringify": "^5.3.0",
    "js-md5": "^0.7.3",
    "jsonminify": "^0.4.1",
    "lodash": "^4.17.14",
    "mapbox-gl": "^1.1.0",
    "material-design-lite": "^1.3.0",
    "regenerator-runtime": "^0.13.2",
    "register-service-worker": "^1.6.2",
    "vue": "^2.6.10",
    "vue-analytics": "^5.17.2",
    "vue-i18n": "^8.12.0",
    "vue-router": "^3.0",
    "vuex": "^3.0.1",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@vue/cli-plugin-babel": "^3.9.2",
    "@vue/cli-plugin-eslint": "^3.9.2",
    "@vue/cli-plugin-pwa": "^3.9.0",
    "@vue/cli-service": "^3.9.2",
    "@vue/eslint-config-airbnb": "^4.0.1",
    "autoprefixer": "^9.6.1",
    "babel-eslint": "^10.0.1",
    "bundlesize": "^0.18.0",
    "csv-parse": "^4.4.3",
    "csvtojson": "^1.1.12",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "lint-staged": "^8.1.5",
    "marked": "^0.7.0",
    "prerender-spa-plugin": "^3.2.1",
    "pwmetrics": "^4.2.1",
    "sass": "^1.22.3",
    "sass-loader": "^7.1.0",
    "vue-cli-plugin-i18n": "^0.6.0",
    "vue-cli-plugin-prerender-spa": "^1.1.5",
    "vue-template-compiler": "^2.6.10"
  },
  "bundlesize": [
    {
      "path": "./dist/css/app.*.css",
      "maxSize": "45 kB"
    },
    {
      "path": "./dist/css/!(app).*.css",
      "maxSize": "7.5 kB"
    },
    {
      "path": "./dist/js/dashboard-map~report-map.*.js",
      "maxSize": "175 kB"
    },
    {
      "path": "./dist/js/chunk-vendors.*.js",
      "maxSize": "105 kB"
    },
    {
      "path": "./dist/js/!(dashboard-map~report-map|chunk-vendors).*.js",
      "maxSize": "30 kB"
    }
  ],
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/airbnb"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 0.2%",
    "last 2 versions",
    "not dead"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
