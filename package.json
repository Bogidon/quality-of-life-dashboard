{
  "name": "Durham-Neighborhood-Compass",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "build-data": "./build/datagen.sh",
    "build-site": "npm run build-data && npm run build",
    "build-sitemap-dev": "node ./build/build-sitemap.js nbhdcompassdev.azurewebsites.us",
    "export-translations": "node ./build/export_translations.js",
    "i18n:report": "vue-cli-service i18n:report --src './src/**/*.?(js|vue)' --locales './src/locales/**/*.json'",
    "import-translations": "node ./build/import_translations.js"
  },
  "dependencies": {
    "@mapbox/mapbox-gl-geocoder": "^4.5.1",
    "@mdi/js": "^4.9.95",
    "chartist": "^0.11.4",
    "chartist-plugin-axistitle": "0.0.7",
    "chartist-plugin-tooltips": "0.0.17",
    "core-js": "^3.4.4",
    "csv-stringify": "^5.3.6",
    "js-md5": "^0.7.3",
    "jsonminify": "^0.4.1",
    "lodash": "^4.17.15",
    "mapbox-gl": "^1.8.1",
    "material-design-lite": "^1.3.0",
    "regenerator-runtime": "^0.13.3",
    "register-service-worker": "^1.6.2",
    "vue": "^2.6.11",
    "vue-analytics": "^5.22.1",
    "vue-i18n": "^8.15.4",
    "vue-observe-visibility": "^0.4.6",
    "vue-router": "^3.1.6",
    "vue-scrollto": "^2.17.1",
    "vuetify": "^2.2.15",
    "vuex": "^3.1.2",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@vue/cli-plugin-babel": "^4.1.2",
    "@vue/cli-plugin-eslint": "^4.1.2",
    "@vue/cli-plugin-pwa": "^4.1.2",
    "@vue/cli-service": "^4.2.3",
    "@vue/eslint-config-airbnb": "^5.0.2",
    "advanced-sitemap-generator": "^1.6.9",
    "async": "^3.2.0",
    "autoprefixer": "^9.7.4",
    "babel-eslint": "^10.1.0",
    "bundlesize": "^0.18.0",
    "csv-parse": "^4.8.8",
    "csvtojson": "^1.1.12",
    "eslint": "^6.8.0",
    "eslint-plugin-vue": "^6.1.2",
    "lint-staged": "^10.0.2",
    "marked": "^0.8.0",
    "prerender-spa-plugin": "^3.2.1",
    "pwmetrics": "^4.2.3",
    "sass": "^1.26.2",
    "sass-loader": "^8.0.2",
    "vue-cli-plugin-i18n": "^0.6.1",
    "vue-cli-plugin-prerender-spa": "^1.1.6",
    "vue-cli-plugin-vuetify": "^2.0.3",
    "vue-template-compiler": "^2.6.11",
    "vuetify-loader": "^1.4.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/airbnb"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 0.2%",
    "last 2 versions",
    "not dead"
  ],
  "bundlesize": [
    {
      "path": "./dist/css/app.*.css",
      "maxSize": "2 kB"
    },
    {
      "path": "./dist/css/chunk-vendors.*.css",
      "maxSize": "30 kB"
    },
    {
      "path": "./dist/css/about~compass~report.*.css",
      "maxSize": "15 kB"
    },
    {
      "path": "./dist/css/!(app|chunk-vendors|about~compass~report).*.css",
      "maxSize": "6.5 kB"
    },
    {
      "path": "./dist/js/dashboard-map~report-map.*.js",
      "maxSize": "190 kB"
    },
    {
      "path": "./dist/js/chunk-vendors.*.js",
      "maxSize": "125 kB"
    },
    {
      "path": "./dist/js/!(dashboard-map~report-map|chunk-vendors).*.js",
      "maxSize": "30 kB"
    }
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint"
    ]
  }
}
